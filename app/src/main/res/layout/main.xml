<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:id="@+id/vehicle_view"
              android:orientation="vertical"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent">


    <ToggleButton
            android:id="@+id/toggleButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="true"
            android:textOff="@string/button_off"
            android:textOn="@string/button_on"
            android:layout_centerHorizontal="true"
            android:layout_alignParentTop="true"
            android:background="@drawable/selector"
            android:layout_marginTop="98dp"/>
    <Button
            android:text="Config"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/config"
            android:layout_alignParentTop="true" android:layout_marginTop="178dp"
            android:layout_centerHorizontal="true"/>
    <TextView
            android:text="Speed:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:layout_alignParentStart="true"
            android:layout_marginStart="106dp" android:layout_centerVertical="true" android:id="@+id/speed"
            android:layout_marginLeft="106dp" android:layout_alignParentLeft="true"/>
    <TextView
            android:text="Engine RPM:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:layout_alignParentBottom="true"
            android:layout_marginBottom="197dp" android:layout_alignStart="@+id/speed" android:id="@+id/engine_rpm"
            android:layout_alignLeft="@+id/speed"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:layout_centerVertical="true"
            android:layout_alignParentEnd="true" android:layout_marginEnd="102dp" android:id="@+id/speed_value"
            android:layout_alignParentRight="true" android:layout_marginRight="102dp"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:layout_alignTop="@+id/engine_rpm"
            android:layout_alignStart="@+id/speed_value" android:id="@+id/engine_rpm_value"
            android:layout_alignLeft="@+id/speed_value"/>


</RelativeLayout>