<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:id="@+id/vehicle_view"
              android:orientation="vertical"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent">


    <ToggleButton
            android:id="@+id/toggleButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="true"
            android:textOff="@string/button_off"
            android:textOn="@string/button_on"
            android:layout_centerHorizontal="true"
            android:background="@drawable/selector"
            android:layout_alignParentBottom="true" android:layout_marginBottom="181dp"/>
    <Button
            android:text="Config"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/config"
            android:layout_centerHorizontal="true" android:layout_alignParentBottom="true"
            android:layout_marginBottom="105dp"/>
    <TextView
            android:text="Speed:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/speed"
            android:layout_alignParentTop="true" android:layout_marginTop="120dp"
            android:textSize="20sp" android:layout_alignStart="@+id/engine_rpm"/>
    <TextView
            android:text="Engine RPM:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/engine_rpm"
            android:layout_alignParentTop="true" android:layout_marginTop="193dp" android:textSize="20sp"
            android:layout_alignParentStart="true" android:layout_marginStart="45dp"/>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:layout_alignTop="@+id/engine_rpm"
            android:id="@+id/engine_rpm_value"
            android:textSize="20sp" android:layout_alignParentEnd="true" android:layout_marginEnd="68dp"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/speed_value"
            android:textSize="20sp" android:layout_alignTop="@+id/speed"
            android:layout_alignStart="@+id/engine_rpm_value"/>


</RelativeLayout>